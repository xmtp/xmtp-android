<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Reaction Bar - Telegram style pill -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/reaction1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/reaction_button_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reaction2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/reaction_button_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reaction3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/reaction_button_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reaction4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/reaction_button_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reaction5"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/reaction_button_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reaction6"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/reaction_button_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textSize="24sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Actions Menu Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Reply Button -->
            <LinearLayout
                android:id="@+id/replyButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_reply_24"
                    android:tint="@color/text_primary"
                    android:contentDescription="@string/reply" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/reply"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Divider before Edit -->
            <View
                android:id="@+id/dividerEdit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="56dp"
                android:background="@color/divider" />

            <!-- Edit Button -->
            <LinearLayout
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_edit_24"
                    android:tint="@color/text_primary"
                    android:contentDescription="@string/edit" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/edit"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Divider before Delete -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="56dp"
                android:background="@color/divider" />

            <!-- Delete Button -->
            <LinearLayout
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_delete_24"
                    android:tint="@color/error"
                    android:contentDescription="@string/delete" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/delete"
                    android:textColor="@color/error"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
