<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp">

    <!-- Avatar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/avatarCard"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:cardBackgroundColor="@color/xmtp_primary"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/avatarText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="AB" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Contact info -->
    <TextView
        android:id="@+id/contactAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="middle"
        android:maxLines="1"
        android:textColor="@color/text_primary"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/contactSubtitle"
        app:layout_constraintEnd_toStartOf="@id/addButton"
        app:layout_constraintStart_toEndOf="@id/avatarCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="0x1234...5678" />

    <TextView
        android:id="@+id/contactSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_tertiary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addButton"
        app:layout_constraintStart_toEndOf="@id/avatarCard"
        app:layout_constraintTop_toBottomOf="@id/contactAddress"
        tools:text="Last messaged 2 days ago" />

    <!-- Add button (for group mode) -->
    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/add_member"
        android:src="@drawable/ic_add_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/xmtp_primary"
        tools:visibility="visible" />

    <!-- Checkmark (for selected contacts in group mode) -->
    <ImageView
        android:id="@+id/selectedCheck"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/xmtp_primary"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
